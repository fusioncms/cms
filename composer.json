{
    "name": "fusioncms/cms",
    "description": "Core of FusionCMS",
    "license": "MIT",
    "authors": [
        {
            "name": "Shea Lewis (Kai)",
            "email": "shea.lewis89@gmail.com"
        }
    ],
    "autoload": {
        "classmap": [
            "database/"
        ],
        "psr-4": {
            "Fusion\\": "src/"
        },
        "files": [
            "helpers/app.php",
            "helpers/datetime.php",
            "helpers/fields.php",
            "helpers/forms.php",
            "helpers/integers.php",
            "helpers/matrix.php",
            "helpers/menus.php",
            "helpers/misc.php",
            "helpers/paths.php",
            "helpers/relationships.php",
            "helpers/seo.php",
            "helpers/settings.php",
            "helpers/strings.php",
            "helpers/themes.php",
            "helpers/users.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/stubs/laravel/addons",
            "tests/stubs/laravel/themes"
        ],
        "psr-4": {
            "Fusion\\Tests\\": "tests/src/",
            "App\\": "tests/stubs/laravel/app/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2.5",
        "caffeinated/flash": "^4.0",
        "caffeinated/menus": "^4.0",
        "composer/semver": "^1.5",
        "doctrine/dbal": "^2.9",
        "illuminate/support": "^7.0",
        "laravel/sanctum": "^2.3",
        "laravel/scout": "^8.0",
        "laravel/ui": "^2.0",
        "league/glide": "^1.5",
        "league/glide-laravel": "^1.0",
        "spatie/laravel-activitylog": "^3.11",
        "spatie/laravel-analytics": "^3.7",
        "spatie/laravel-backup": "^6.7",
        "spatie/laravel-permission": "^3.11",
        "spatie/laravel-query-builder": "^2.7",
        "spatie/laravel-searchable": "^1.6",
        "symfony/yaml": "^4.3"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^4.2",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^8.4",
        "predis/predis": "^1.1",
        "symfony/css-selector": "^4.3",
        "symfony/dom-crawler": "^4.3"
    },

    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fusion\\Providers\\FusionServiceProvider"
            ],
            "aliases": {
                "Addon": "Fusion\\Facades\\Addon",
                "Theme": "Fusion\\Facades\\Theme",
                "Fusion": "Fusion\\Facades\\Fusion",
                "Setting": "Fusion\\Facades\\Setting"
            }
        }
    }
}
